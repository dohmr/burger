

<ul>
  {{#each burgers}}
    {{#unless whole}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>


<h2>Make a Burger!</h2>
<form class="create-form">

  <div class="form-group">
    <input type="text" id="ca" name="name"><br>
    <label for="ca">Name a Burger:</label>
    
  </div>

  <div class="form-group">
    <label for="sleepy">Hungry?</label><br>
  </div>

  <button type="submit">Add Dat Thang</button>
</form>
